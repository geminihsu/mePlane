<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    >
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40sp"
      
>
     <TextView android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text=""/>
     <ImageButton android:id="@+id/emo"
    	android:layout_width="159sp" 
    android:layout_height="40sp" 
    	android:src="@drawable/emotion" />	
    <ImageButton android:id="@+id/search"
    	android:layout_width="159sp" 
    android:layout_height="40sp" 
    	android:src="@drawable/search" />	
 
      </LinearLayout>
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40sp"
>
    <ImageButton android:id="@+id/myplaylist"
    	android:layout_width="159sp" 
    android:layout_height="40sp" 
    	android:src="@drawable/my" />	
      <ImageButton android:id="@+id/location"
    	android:layout_width="159sp" 
    android:layout_height="40sp" 
    	android:src="@drawable/map" />	
  </LinearLayout>
 <com.emotion.playlist.TouchScreen
			android:id="@+id/popup_window" 
    	    android:layout_width="fill_parent"
        	android:layout_height="350sp"
        	android:orientation="vertical"
        	android:gravity="left"
        	android:padding="1px"
            android:visibility="invisible"
        	
        	android:background="@drawable/black"/>


</LinearLayout>