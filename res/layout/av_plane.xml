        	android:gravity="left"
        	android:padding="1px"
        	android:background="@drawable/black"/>
<TextView android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
</LinearLayout>
